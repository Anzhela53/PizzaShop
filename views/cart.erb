<h3>Youre cart</h3>

<table border="1" cellspacing="0" cellpadding="10">
  <tr>
    <th>Products</th>
    <th>Price</th>
    <th>Qty</th>
  </tr>

  <% total_qty = 0 %>
  <% total_price = 0 %>

  <% @items.each do |item| %>
  <tr>
    <td><%= item[0].title %></td>
    <td><%= item[0].price %> ¥</td>
    <td><%= item[1] %></td>
  </tr>

  <% total_qty += item[1].to_i %>
  <% total_price += item[0].price * total_qty %>
  <% end %>

  <tr style="background: orange;">
    <td><strong>Total:</strong></td>
    <td><%= total_price %>¥</td>
    <td><%= total_qty %></td>
  </tr>

</table>

<form action ="/place_order" method ="POST" role="form">

<input name="order[orders_input]" type ="hidden" value = "<%= @orders_input%>" />

  <div class="form-group">
    <label for="exampleInputEmail1">Your name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Your name">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Phone</label>
    <input name="order[phone]" type="text" class="form-control " placeholder="Your phone">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Dilivery Address</label>
    <input name="order[address]" type="text" class="form-control " placeholder="Your phone">
  </div>

<button type="submit" class="btn btn-success btn-lg">PLace this order!</button>